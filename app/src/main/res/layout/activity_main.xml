<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="142dp"
            android:layout_height="112dp"
            android:layout_marginTop="36dp"
            android:background="#00FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logomic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TOKEN DE AUTENTICACIÃ“N  DISPOSITIVO"
            android:textColor="#037781"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/etToken"
            android:layout_width="295dp"
            android:layout_height="46dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintEnd_toStartOf="@+id/imageView8"
            app:layout_constraintHorizontal_bias="0.761"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="NOMBRE DEL EMPLEADO"
            android:textColor="#020202"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.128"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etToken" />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="207dp"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:capitalize="none"
            android:text=".............."
            android:textColor="#050505"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/tvFuncion"
            android:layout_width="151dp"
            android:layout_height="25dp"
            android:layout_marginTop="16dp"
            android:capitalize="none"
            android:text=".............."
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvNombre"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="228dp"
            android:layout_height="28dp"
            android:layout_marginTop="24dp"
            android:text="MODULOS ASIGNADOS"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNombre" />

        <TextView
            android:id="@+id/tVModulo"
            android:layout_width="201dp"
            android:layout_height="53dp"
            android:layout_marginTop="12dp"
            android:text=".............."
            android:textColor="#0B0B0B"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="124dp"
            android:layout_height="102dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/littlemic__iv_20_perfil2______" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="105dp"
            android:layout_height="102dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/movies__iv_2020______" />

        <Space
            android:id="@+id/space"
            android:layout_width="375dp"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:background="#000000"
            android:backgroundTint="#0B0B0B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tVModulo" />


        <TextView
            android:id="@+id/tvPeticionesFF"
            android:layout_width="118dp"
            android:layout_height="603dp"
            android:layout_marginBottom="28dp"
            android:text="H FINAL"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvMinutos"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvMinutos"
            android:layout_width="76dp"
            android:layout_height="666dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="28dp"
            android:text="MINUTOS"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvPeticiones"
            android:layout_width="71dp"
            android:layout_height="596dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="28dp"
            android:text="MODULO"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintVertical_bias="0.014" />

        <TextView
            android:id="@+id/tvPeticionesFI"
            android:layout_width="100dp"
            android:layout_height="603dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="28dp"
            android:text="H INICIAL"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvPeticionesFF"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tvPeticiones"
            app:layout_constraintTop_toBottomOf="@+id/space"
            app:layout_constraintVertical_bias="0.015" />

        <Button
            android:id="@+id/btnEstado"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="156dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button"
            android:onClick="obtenerPeticionesModulos"
            android:text="VER SOLICITUDES"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/BtnVerPefil"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="156dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_button"
            android:onClick="VerPerfil"
            android:text="VER PERFIL"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="@color/orange"
            app:layout_constraintBottom_toTopOf="@+id/btnEstado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFuncion"
            app:layout_constraintVertical_bias="0.2" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="28dp"
            android:background="#00FFFFFF"
            android:onClick="copiarToken"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/gmail_icon__2013_2020__svg" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>